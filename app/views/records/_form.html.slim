=form_with model: [book, record], local: true do |f|
  .form-group
    =f.label :date, "日付"
    =f.date_field :date, value: Time.now.strftime("%F"), class: 'form-control'
  .form-group
    =f.label :content, "内容"
    =f.text_field :content, class: 'form-control'
  .form-group
    =f.label :amount, "金額"
    =f.number_field :amount, class: 'form-control'
  .form-group
    |費目
    =f.collection_radio_buttons(:category, book.categories, :id, :name) do |b|
      = b.label(class: 'form-check') {b.radio_button(class: 'form-check-input') + b.text}
  .form-group
    =f.label :wallet, "支払者"
    =f.text_field :wallet, class: 'form-control'
  .text-center
    =f.submit class: 'btn btn-info'